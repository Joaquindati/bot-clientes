# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL="postgresql://usuario:password@endpoint:5432/database?schema=public"

# ===========================================
# AUTH.JS CONFIGURATION
# ===========================================
# Secret para firmar tokens (REQUERIDO)
# Generar con: openssl rand -base64 32
AUTH_SECRET=""

# URL de la aplicación (cambiar según ambiente)
# Desarrollo: http://localhost:3000
# Producción: https://tu-dominio.amplifyapp.com
AUTH_URL="http://localhost:3000"

# ===========================================
# GOOGLE OAUTH (REQUERIDO para login con Google)
# ===========================================
# Obtener en: https://console.cloud.google.com
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# ===========================================
# GOOGLE MAPS API (REQUERIDO para mapas)
# ===========================================
# Obtener en: https://console.cloud.google.com
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=""

# ===========================================
# APP CONFIGURATION
# ===========================================
# URL pública de la aplicación
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ===========================================
# EMAIL SERVICE (OPCIONAL - Resend)
# ===========================================
# Si no configuras estas variables, el sistema funcionará pero sin emails
# Obtener en: https://resend.com
RESEND_API_KEY=""
EMAIL_FROM="onboarding@resend.dev"
EMAIL_REPLY_TO=""

# ===========================================
# CRON JOBS SECURITY (OPCIONAL)
# ===========================================
# Secret para proteger endpoints de cron jobs
# Generar con: openssl rand -base64 32
CRON_SECRET=""
