generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Auth.js models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  leads         Lead[]
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

model Lead {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  place_id  String   @unique
  name      String
  address   String
  rating    Float?
  phone     String?
  website   String?
  city      String?
  state     String?
  country   String?
  keyword   String?

  // Contact Info
  emails    String // Stored as JSON string or comma separated
  socials   String // Stored as JSON string

  // Technical Info
  techStack String? // Stored as JSON array
  hasSsl    Boolean @default(false)

  // Status
  status         String   @default("NEW") // NEW, CONTACTED, INTERESTED, CLIENT
  notes          String?
  description    String?  // Rich text description field
  lastContactDate DateTime?
  economyLevel   Int      @default(0) // 0 = Not set, 1 = $, 2 = $$, 3 = $$$

  // Sales Intelligence Fields
  decisionMaker           String?   // Nombre del contacto clave
  decisionMakerRole       String?   // Cargo/rol del tomador de decisión
  estimatedCloseDate      DateTime? // Fecha estimada de cierre
  urgencyLevel            String?   // HIGH, MEDIUM, LOW
  painPoints              String?   // Principales dolores/problemas
  leadSource              String?   // Google Maps, Referido, LinkedIn, etc.
  bestContactTime         String?   // Mañana, Tarde, Noche
  preferredContactChannel String?   // WhatsApp, Email, Llamada
  employeeCount           String?   // 1-5, 6-20, 21-50, 50+
  nextAction              String?   // Siguiente paso específico
  nextActionDate          DateTime? // Fecha de seguimiento

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
