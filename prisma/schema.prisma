generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Lead {
  id        String   @id @default(uuid())
  place_id  String   @unique
  name      String
  address   String
  rating    Float?
  phone     String?
  website   String?
  city      String?
  keyword   String?

  // Contact Info
  emails    String // Stored as JSON string or comma separated
  socials   String // Stored as JSON string

  // Technical Info
  techStack String? // Stored as JSON array
  hasSsl    Boolean @default(false)

  // Status
  status    String   @default("NEW") // NEW, CONTACTED, INTERESTED, CLIENT
  notes     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
